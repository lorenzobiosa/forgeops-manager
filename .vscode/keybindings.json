[
  {
    "key": "ctrl+shift+b",
    "command": "workbench.action.tasks.build"
  },
  {
    "key": "ctrl+alt+s",
    "command": "workbench.action.tasks.runTask",
    "args": "setup:dev (Linux/macOS/WSL)",
    "when": "isLinux || isMac"
  },
  {
    "key": "ctrl+alt+s",
    "command": "workbench.action.tasks.runTask",
    "args": "setup:dev (Windows)",
    "when": "isWindows"
  }
]
