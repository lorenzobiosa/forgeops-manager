{
  // ðŸ‘‡ Imposta l'interprete della venv per Linux/macOS
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

  // ðŸ‘‰ Se usi Windows nativo, decommenta questa riga (e commenta quella sopra):
  // "python.defaultInterpreterPath": "${workspaceFolder}\\.venv\\Scripts\\python.exe",

  // ðŸ‘‰ Se usi WSL, decommenta questa riga (e commenta quella sopra):
  // "python.defaultInterpreterPath": "/home/<tuo-utente>/<percorso-repo>/.venv/bin/python",

  // Pylance strict per coerenza con mypy --strict
  "python.analysis.typeCheckingMode": "strict",

  // Migliora risoluzione import per moduli in src/
  "python.analysis.extraPaths": ["${workspaceFolder}/src"],

  // Mostra (o alza) la severitÃ  dei diagnostici utili
  "python.analysis.diagnosticSeverityOverrides": {
    // Mantiene alto (error) se l'interprete non vede il modulo
    "reportMissingModuleSource": "error",
    // Mantiene severitÃ  alta sui tipi sconosciuti
    "reportUnknownMemberType": "error",
    "reportUnknownVariableType": "error"
    // Se vuoi meno rumore per alcuni casi, porta a "warning"
    // "reportUnusedImport": "warning"
  },

  // Testing: pytest
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": ["-q", "tests"],

  // Formatter & imports
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.rulers": [100],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  // isort coerente con black
  "isort.args": ["--profile", "black", "--line-length", "100"],

  // Flake8 in-editor (duplica quella di pre-commit/CI; se Ã¨ troppo, disattiva)
  "python.linting.flake8Enabled": true,

  // .env (attenzione ai segreti!)
  "python.envFile": "${workspaceFolder}/.env"
}
